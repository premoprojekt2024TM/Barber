{
  "compilerOptions": {
    "target": "ES6",                        
    "module": "commonjs",                  
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,         
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,        
  },
  "include": [
    "src/**/*.ts"
  ]
}
